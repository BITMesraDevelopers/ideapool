<div class="jumbotron">
	<% if @project %>
	<%= form_for(@project, :url => {:action => "saveproject"}, :html => {:class => "formdefault form-horizontal"}) do |f| %>
		<fieldset>
		<legend>Create Project</legend>
		<input type="hidden" name="project_id" value="<%= @project.id %>"/>
		<div class="form-group">
			<label class="col-lg-1 control-label">Title</label>
			<div class="col-lg-11">
				<div class="col-lg-2">
					<%= f.text_field :title, :class => "form-control col-lg-2" %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="col-lg-1 control-label">Description</label>
			<div class="col-lg-11">
				<div class="col-lg-9">
					<%= f.text_area :description, :class => "form-control col-lg-2", :rows => 7 %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="col-lg-1 control-label">Time Required</label>
			<div class="col-lg-11">
				<div class="col-lg-2">
					<%= f.text_field :time_required, :class => "form-control col-lg-2" %>
				</div>
			</div>
		</div>
		<div class="form-group">
			<label class="col-lg-1 control-label">Status</label>
			<div class="col-lg-11">
				<div class="col-lg-2">
					<%= f.text_field :status, :class => "form-control col-lg-2" %>
				</div>
			</div>
		</div>
		<%= f.submit "Submit", :class => "buttondefault btn btn-primary" %>
		</fieldset>
	<% end %>
	<% else %>
	<p>Sorry, but you cannot edit this project.</p>
	<% end %>
</div>
